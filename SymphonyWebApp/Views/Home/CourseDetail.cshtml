@model SymphonyWebApp.Data.Entities.Course
@{
    Layout = "_PageLayout";
    ViewData["Title"] = "CourseDetail";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_2.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate pb-5 text-center">
                <p class="breadcrumbs"><span class="mr-2"><a asp-area="" asp-action="Index" asp-controller="Home">Home <i class="fa fa-chevron-right"></i></a></span><a asp-action="Course" asp-controller="Home"><span>Course Lists <i class="fa fa-chevron-right"></i></span></a> </p>
                <h1 class="mb-0 bread">Course Details</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section services-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-5 heading-section pr-md-5 ftco-animate d-flex align-items-center">
                <div class="w-100 mb-4 mb-md-0">
                    <span class="subheading">Welcome to Course</span>
                    <h2 class="mb-4">@Html.DisplayFor(model => model.CourseName)</h2>
                    <img src="~/images/post/@Html.DisplayFor(model => model.UrlImage)" alt="Alternate Text" class="img-fluid" />
                </div>
            </div>
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-12 col-lg-4 d-flex align-self-stretch ftco-animate">
                        <div class="services">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-tools"></span></div>
                            <div class="media-body">
                                <h3 class="heading mb-3">Training Time </h3>
                                <p>@Html.DisplayFor(model => model.TrainingTime)</p>
                            </div>
                            <div class="media-body">
                                <h3 class="heading mb-3">Fee</h3>
                                <p>@Html.DisplayFor(model => model.Fee)</p>
                            </div>
                            <div class="media-body">
                                <h3 class="heading mb-3">Level</h3>
                                <p>@Html.DisplayFor(model => model.level)</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 col-lg-8 d-flex align-self-stretch ftco-animate">
                        <div class="services">
                            <div class="icon icon-4 d-flex align-items-center justify-content-center"><span class="flaticon-browser"></span></div>
                            <div class="media-body">
                                <h3 class="heading mb-3">What you'll learn</h3>
                                <p>@Html.DisplayFor(model => model.Description)</p>
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
                                    Enroll
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Register Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body h5">
                <form class="signup-form" asp-action="CreateCustomer">
                    <div class="form-group">
                        <label class="label" for="name">Full Name</label>
                        <input name="name" type="text" class="form-control" placeholder="Enter your name" required="">
                    </div>
                    <div class="form-group">
                        <label class="label" for="email">Email Address</label>
                        <input name="gmail" type="email" class="form-control" placeholder="Enter your email" required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="label" for="text">Phone Number</label>
                        <input name="phonenumber" type="number" class="form-control" placeholder="Enter your phone number" required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="label" for="text">Question</label>
                        <input name="content" type="text" class="form-control" placeholder="Enter your question " required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary submit">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>