@model SymphonyWebApp.Data.Entities.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gmail" class="control-label"></label>
                <input asp-for="Gmail" class="form-control" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                <input asp-for="Contents" class="form-control" />
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatingDate" class="control-label"></label>
                <input asp-for="CreatingDate" class="form-control" />
                <span asp-validation-for="CreatingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="customerStatus" class="control-label"></label>
                <select asp-for="customerStatus" class="form-control" asp-items="Html.GetEnumSelectList<CustomerStatus>()">
                    <option selected="selected" value="">
                        Please select
                    </option>
                </select>       
                <span asp-validation-for="customerStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestRoomId" class="control-label"></label>
                <select asp-for="TestRoomId" class="form-control" asp-items="ViewBag.TestRoomId">
                    <option selected="selected" value="">
                        Please select
                    </option>
                </select>
                <span asp-validation-for="TestRoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

