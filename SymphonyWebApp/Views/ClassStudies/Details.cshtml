@*@model SymphonyWebApp.Data.Entities.ClassStudy*@
@model IEnumerable<SymphonyWebApp.Data.Entities.ClassStudy>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClassId)
            </dt>
            <dd class="col-sm-10">
                @item.ClassId
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @item.Name
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd class="col-sm-10">
                @item.StartTime
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndTime)
            </dt>
            <dd class="col-sm-10">
                @item.EndTime
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Teacher)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Teacher.FirstName)
            </dd>
        }
    </dl>
</div>
<h4>Student list</h4>

<table class="table">
    <thead class="text-center">
        <tr>
            <th>
                Number
            </th>
            <th>
                Roll Number
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Student Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            int stt = 0;
            if (Model.Count() < 0)
            {
                <tr>
                    <td colspan="11" class="text-center h2">
                        No data
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {

                    foreach (var student in item.Students)
                    {
                        <tr>

                            <td>
                                @if (item != null) { stt += 1; }
                                @stt
                            </td>
                            <td>
                                @student.RollNumber
                            </td>
                            <td>
                                @student.FirstName
                            </td>
                            <td>
                                @student.LastName
                            </td>

                            @if (@student.StudentStatus == StudentStatus.Dropout)
                            {
                                <td class="alert-danger">
                                    @student.StudentStatus
                                </td>
                            }
                            else if (@student.StudentStatus == StudentStatus.Graduated)
                            {
                                <td class="alert-primary">
                                    @student.StudentStatus
                                </td>
                            }
                            else if (@student.StudentStatus == StudentStatus.Studying)
                            {
                                <td class="alert-success">
                                    @student.StudentStatus
                                </td>
                            }
                            else if (@student.StudentStatus == StudentStatus.Retention)
                            {
                                <td class="alert-warning">
                                    @student.StudentStatus
                                </td>
                            }
                            <td style="min-width:240px;">
                                <a asp-action="Edit" asp-controller="Students" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Details" asp-controller="Students" asp-route-id="@student.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }

                }
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@TempData["classId"]" class="btn btn-warning">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>