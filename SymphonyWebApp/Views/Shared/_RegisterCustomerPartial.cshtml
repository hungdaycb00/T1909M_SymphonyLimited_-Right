<div class="container">
    <div class="row">
        <div class="col-md-7"></div>
        <div class="col-md-5 order-md-last">
            <div class="login-wrap p-4 p-md-5">
                <h3 class="mb-4">Register Now</h3>
                <form class="signup-form" asp-action="CreateCustomer">
                    <div class="form-group">
                        <label class="label" for="name">Full Name</label>
                        <input name="name" type="text" class="form-control" placeholder="Enter your name" required="">
                    </div>
                    <div class="form-group">
                        <label class="label" for="email">Email Address</label>
                        <input name="gmail" type="email" class="form-control" placeholder="Enter your email" required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="label" for="text">Phone Number</label>
                        <input name="phonenumber" type="number" class="form-control" placeholder="Enter your phone number" required="" min="10">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="label" for="text">Question</label>
                        <input name="content" type="text" class="form-control" placeholder="Enter your question " required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary submit">Send <span class="fa fa-paper-plane"></span></button>
                    </div>
                </form>
                @if (TempData["msg"] != null)
                {

                    <p class="alert alert-success" role="alert">@TempData["msg"]</p>
                    <span>@TempData["msg1"]</span>
                }
            </div>
        </div>
    </div>
</div>