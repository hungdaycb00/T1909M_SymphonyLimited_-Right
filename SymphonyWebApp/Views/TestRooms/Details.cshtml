@*@model SymphonyWebApp.Data.Entities.TestRoom*@
@model IEnumerable<SymphonyWebApp.Data.Entities.TestRoom>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>

    <dl class="row">
        @foreach (var item in Model)
        {
            <dt class="col-sm-2">
                Room Name
            </dt>
            <dd class="col-sm-10">
                @item.Name
            </dd>

        }

    </dl>


</div>
<h4>Customer list</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Creating Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int stt = 0;
            if (Model.Count() < 0)
            {
                <tr>
                    <td colspan="11" class="text-center h2">
                        No data
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {

                    foreach (var customer in item.Customers)
                    {
    <tr>

        <td>
            @if (item != null) { stt += 1; }
            @stt
        </td>
        <td>
            @customer.Name
        </td>

        <td>
            @customer.PhoneNumber
        </td>

        <td>
            @customer.Gmail
        </td>
        <td>
            @customer.CreatingDate
        </td>
        <td style="min-width:240px;">
            <a asp-action="Edit" asp-controller="Customers" asp-route-id="@customer.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Details" asp-controller="Customers" asp-route-id="@customer.Id" class="btn btn-info">Details</a>
        </td>
    </tr>
                    }


                }
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@TempData["TestRoomId"]" class="btn btn-warning">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
